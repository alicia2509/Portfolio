---
import './card-portfolio.css';
const {
	title,
	descripcion,
	imgSrc,
	downloadURL,
	averageBrightness,
	itchioURL
} = Astro.props;
---

<div class="card__portfolio">
	<img
		src={imgSrc}
		alt={title}
		crossorigin="anonymous"
		height={130}
		width={332}
		loading="lazy"
		average-brightness={averageBrightness}
	/>

	<div class="descripcion__container">
		<h2 class="card__title">{title}</h2>
		<div class="descripcion">
			<p>{descripcion}</p>

			<div class="buttons">
				{downloadURL && (
				<a href={downloadURL}>
					<span>
						Descargar
						{(<iconify-icon icon="quill:link-out" />)}
					</span>
				</a>
				 )}
				{itchioURL && (
					<a href={itchioURL}>
					  <span>
						Itch.io
						<iconify-icon icon="quill:link-out" />
					  </span>
					</a>
				  )}
			</div>
		</div>
	</div>
</div>
